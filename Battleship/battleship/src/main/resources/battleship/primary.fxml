<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171"
   xmlns:fx="http://javafx.com/fxml/1" fx:controller="battleship.controllers.PrimaryController">
   <children>
      <Label fx:id="statusLabel" text="Battleship" />
      <TextField fx:id="inputGuess" />
      <Button fx:id="buttonGuess" text="Guess" onAction="#guess" />
      <ScrollPane>
         <content>
            <VBox prefWidth="200" alignment="center" fx:id="Left">
               <children>
                  <Text fx:id="scrollingOutput" />
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>